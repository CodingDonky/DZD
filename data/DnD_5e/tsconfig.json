{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "removeComments": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es7"
        ]
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}